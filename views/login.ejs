<!DOCTYPE html>
<html>

<head>
    <title>Pizza login</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include partialtemplate/csslinks.ejs %>

</head>

<body>
    <% include partialtemplate/navlinks.ejs %>

    <!-- END nav -->

    <section class="home-slider owl-carousel img" style="background-image: url(staticfiles/images/bg_1.jpg);">

        <div class="slider-item" style="background-image: url(staticfiles/images/bg_3.jpg);">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text justify-content-center align-items-center">

                    <div class="col-md-7 col-sm-12 text-center ftco-animate">
                        <h1 class="mb-3 mt-5 bread">Login/Register</h1>
                        <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span>Login/Register</span></p>
                    </div>

                </div>
            </div>
        </div>
    </section>


    <section class="ftco-menu">
        <div class="container-fluid">


            <div class="row my-4 d-md-flex">
                <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8 ftco-animate img f-menu-img mb-5 mb-md-0" style="background-image:url(staticfiles/images/about.jpg)"></div>
                <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 ftco-animate">
                    <div class="mx-3">
                        <p class="h2 text text-light text-center mb-4 i" style="border-bottom:1px white solid; font-family:Algerian">Login</p>
                        <div class="invisible" id="emptyErr">  </div>
                        <a id="logoutBtn" href="/logout" class="btn btn-danger btn-block invisible" style="border-radius:5px">Log Out</a>
                        <form class="contact-form" id="loginForm">
                            <div class="form-group">
                                <input type="email" class="form-control" id="userEdit" name="username" placeholder="**enter your username"
                                    autocomplete="off" required />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="passEdit" name="password" placeholder="**enter your password"
                                    autocomplete="off" required />
                            </div>
                            <div class="form-group">
                                <input type="button" class="btn btn-success btn-block" id="loginBtn" value="Login"
                                    style="border-radius:5px" />
                            </div>
                            <div class="form-group">
                                <a href="register" class="btn btn-primary btn-block " style="border-radius:5px">Register</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <% include partialtemplate/footer.ejs %>


    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>



    <% include partialtemplate/jslinks.ejs %>

</body>

</html>